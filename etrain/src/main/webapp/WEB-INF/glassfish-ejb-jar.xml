<!DOCTYPE glassfish-ejb-jar PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 EJB 3.1//EN" "http://glassfish.org/dtds/glassfish-ejb-jar_3_1-1.dtd">
<glassfish-ejb-jar>
    <enterprise-beans>
        <ejb>
            <ejb-name>BackgroundAsynchronousEventDispatcher</ejb-name>
            <mdb-connection-factory>
                <jndi-name>QueueConnectionFactory</jndi-name>
            </mdb-connection-factory>
            <mdb-resource-adapter>
                <resource-adapter-mid>activemqrar</resource-adapter-mid>
            </mdb-resource-adapter>
        </ejb>
        <ejb>
            <ejb-name>ConfigChangeJmsListener</ejb-name>
            <mdb-connection-factory>
                <jndi-name>ConfigChangeTopicConnectionFactory</jndi-name>
            </mdb-connection-factory>
            <mdb-resource-adapter>
                <resource-adapter-mid>activemqrar</resource-adapter-mid>
            </mdb-resource-adapter>
        </ejb>
        <ejb>
            <ejb-name>ComPortJmsEventReceiver</ejb-name>
            <jndi-name>ComportQueue</jndi-name>
            <mdb-connection-factory>
                <jndi-name>QueueConnectionFactory</jndi-name>
            </mdb-connection-factory>
            <mdb-resource-adapter>
                <resource-adapter-mid>activemqrar</resource-adapter-mid>
            </mdb-resource-adapter>
        </ejb>
        <ejb>
            <ejb-name>RemoteProcessStatusChangeListener</ejb-name>
            <mdb-connection-factory>
                <jndi-name>TopicConnectionFactory</jndi-name>
            </mdb-connection-factory>
            <mdb-resource-adapter>
                <resource-adapter-mid>activemqrar</resource-adapter-mid>
            </mdb-resource-adapter>
        </ejb>
        <ejb>
            <ejb-name>CronjobStatusListener</ejb-name>
            <mdb-connection-factory>
                <jndi-name>TopicConnectionFactory</jndi-name>
            </mdb-connection-factory>
            <mdb-resource-adapter>
                <resource-adapter-mid>activemqrar</resource-adapter-mid>
            </mdb-resource-adapter>
        </ejb>
    </enterprise-beans>
</glassfish-ejb-jar>